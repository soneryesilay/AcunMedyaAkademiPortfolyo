
@{
    ViewBag.Title = "CreateStatistic";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni İstatistik Girişi</h2>
<form method="post">
    <label>İstatistik Adı</label>
    <input type="text" class="form-control" name="StatisticTitle" style="border:solid" />
    <br />

    <label>İstatistik Değeri</label>
    <input type="text" class="form-control" name="StatisticValue" style="border:solid" />
    <br />

    <label>İstatistik İkonu</label>
    <input type="text" class="form-control" name="StatisticIcon" style="border:solid" />
    <br />

    <button type="submit" class="btn btn-primary">İstatistik Ekle</button>
</form>


