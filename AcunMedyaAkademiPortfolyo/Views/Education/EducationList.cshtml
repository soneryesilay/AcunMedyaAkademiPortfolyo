@model List<AcunMedyaAkademiPortfolyo.Models.TblEducation>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Eğitim Id</th>
        <th>Başlık</th>
        <th>Alt başlık</th>
        <th>Zaman</th>
        <th>Açıklama</th>


        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    <h2>Eğitim Hayatı</h2>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Period</td>
            <td>@item.Description</td>
            <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

<a href="/Education/CreateEducation/" class="btn btn-primary">Yeni Eğitim Girişi</a>