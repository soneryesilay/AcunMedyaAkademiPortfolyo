﻿@model AcunMedyaAkademiPortfolyo.Models.TblCategory

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<form method="post">
    <label>Kategori Id</label>
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kategoriyi Güncelle</button>
</form>